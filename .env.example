# ===========================================
# $COPPER Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development

# ===========================================
# Database (Neon PostgreSQL)
# ===========================================
# Get from: https://neon.tech
DATABASE_URL=postgresql://user:password@ep-xxxxx.us-east-2.aws.neon.tech/copper?sslmode=require

# ===========================================
# Redis (Upstash)
# ===========================================
# Get from: https://upstash.com
REDIS_URL=redis://default:xxxxx@xxxxx.upstash.io:6379
UPSTASH_REDIS_REST_URL=https://xxxxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxxxx

# ===========================================
# Helius API
# ===========================================
# Get from: https://helius.dev
HELIUS_API_KEY=your-helius-api-key
HELIUS_WEBHOOK_SECRET=your-webhook-secret

# ===========================================
# Solana RPC
# ===========================================
# Using Helius RPC (recommended) or other provider
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=your-helius-api-key

# ===========================================
# Wallet Private Keys (Base58 encoded)
# ===========================================
# IMPORTANT: Never commit these to version control!
# Generate wallets using: solana-keygen new

# Receives Pump.fun creator rewards (0.5% of trades)
CREATOR_WALLET_PRIVATE_KEY=

# Executes Jupiter swaps for buybacks
BUYBACK_WALLET_PRIVATE_KEY=

# Holds $COPPER tokens for distribution
AIRDROP_POOL_PRIVATE_KEY=

# Team wallet (receives 20% of fees) - public key only
TEAM_WALLET_PUBLIC_KEY=

# ===========================================
# Token Configuration
# ===========================================
# Set after deploying token on Pump.fun
COPPER_TOKEN_MINT=

# ===========================================
# API Configuration
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# ===========================================
# Task Queue (Celery)
# ===========================================
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# ===========================================
# Distribution Settings
# ===========================================
# Minimum pool value (USD) to trigger distribution
DISTRIBUTION_THRESHOLD_USD=250
# Maximum hours between distributions
DISTRIBUTION_MAX_HOURS=24

# ===========================================
# Snapshot Settings
# ===========================================
# Probability of taking a snapshot each hour (0.0 - 1.0)
SNAPSHOT_PROBABILITY=0.4

# ===========================================
# External Services (Optional)
# ===========================================
# Error tracking
SENTRY_DSN=

# Analytics
PLAUSIBLE_DOMAIN=
